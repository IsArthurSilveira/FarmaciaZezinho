        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
        }
        .switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }
        
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
        }
        
        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }
        
        input:checked + .slider {
            background-color: #3B82F6;
        }
        
        input:focus + .slider {
            box-shadow: 0 0 1px #3B82F6;
        }
        
        input:checked + .slider:before {
            transform: translateX(26px);
        }
        
        .slider.round {
            border-radius: 34px;
        }
        
        .slider.round:before {
            border-radius: 50%;
        }
        
        /* Tab Styles */
        .tab-button {
            position: relative;
            transition: all 0.3s;
        }
        
        .active-tab {
            border-bottom: 2px solid #3B82F6;
            color: #3B82F6;
        }
    </style>
